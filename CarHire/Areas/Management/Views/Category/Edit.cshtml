@model CategoryHomeModel

@{
    ViewData["Title"] = "Edit Page";
}

<h2 class="text-center text-danger">Edit Category</h2>

<div class="container-xxl">
    <form method="post">
        <div class="form-group">
            <input asp-for="@Model.CategoryId" />
            <label asp-for="Name" class="bg-primary text-white"></label>
            <input asp-for="Name" class="form-control" placeholder="@Model.Name..." />
            <span asp-validation-for="Name" class="small text-danger"></span>
            <div class="text-center">
                <input class="btn btn-primary mt-3" type="submit" value="Save" />
            </div>
        </div>
    </form>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}